-- LocalScript (StarterPlayer -> StarterPlayerScripts) 
local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- handle character (for equipping tools)
local character = player.Character or player.CharacterAdded:Wait()
local humanoid = character:WaitForChild("Humanoid")
player.CharacterAdded:Connect(function(char)
    character = char
    humanoid = char:WaitForChild("Humanoid")
end)

-- key validation function
local function isValidKey(key)
    -- Check if key is exactly 6 characters
    if string.len(key) ~= 6 then
        return false
    end
    
    -- Check if key contains only uppercase letters (A-Z) and numbers (0-9)
    for i = 1, string.len(key) do
        local char = string.sub(key, i, i)
        local byte = string.byte(char)
        -- Check if character is A-Z (65-90) or 0-9 (48-57)
        if not ((byte >= 65 and byte <= 90) or (byte >= 48 and byte <= 57)) then
            return false
        end
    end
    
    return true
end

-- create GUI root
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "PurgeHubCloneDemo"
screenGui.ResetOnSpawn = false
screenGui.Parent = playerGui

-- ----- key frame -----
local keyFrame = Instance.new("Frame")
keyFrame.Name = "KeyFrame"
keyFrame.Size = UDim2.new(0, 400, 0, 250)
keyFrame.Position = UDim2.new(0.5, -200, 0.5, -125)
keyFrame.AnchorPoint = Vector2.new(0.5, 0.5)
keyFrame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
keyFrame.BackgroundTransparency = 0.1
keyFrame.BorderSizePixel = 0
keyFrame.Parent = screenGui

local keyCorner = Instance.new("UICorner")
keyCorner.CornerRadius = UDim.new(0, 12)
keyCorner.Parent = keyFrame
local keyStroke = Instance.new("UIStroke")
keyStroke.Color = Color3.fromRGB(80, 80, 80)
keyStroke.Thickness = 1
keyStroke.Transparency = 0.5
keyStroke.Parent = keyFrame

local keyTitle = Instance.new("TextLabel")
keyTitle.Parent = keyFrame
keyTitle.Size = UDim2.new(1, -20, 0, 50)
keyTitle.Position = UDim2.new(0, 10, 0, 15)
keyTitle.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
keyTitle.BackgroundTransparency = 0.3
keyTitle.Text = "🔐 Finnix HUB: เสกสัตว์เลี้ยง"
keyTitle.TextColor3 = Color3.fromRGB(255, 100, 100)
keyTitle.TextScaled = true
keyTitle.Font = Enum.Font.GothamBold
local keyTitleCorner = Instance.new("UICorner")
keyTitleCorner.CornerRadius = UDim.new(0, 8)
keyTitleCorner.Parent = keyTitle
local keyTitleStroke = Instance.new("UIStroke")
keyTitleStroke.Color = Color3.fromRGB(255, 100, 100)
keyTitleStroke.Thickness = 1
keyTitleStroke.Transparency = 0.7
keyTitleStroke.Parent = keyTitle

local keyInput = Instance.new("TextBox")
keyInput.Parent = keyFrame
keyInput.Size = UDim2.new(1, -20, 0, 45)
keyInput.Position = UDim2.new(0, 10, 0, 80)
keyInput.PlaceholderText = "🔑 กรอกคีย์เพื่อเข้าใช้งาน"
keyInput.ClearTextOnFocus = false
keyInput.Text = ""
keyInput.Font = Enum.Font.Gotham
keyInput.TextColor3 = Color3.fromRGB(255, 255, 255)
keyInput.PlaceholderColor3 = Color3.fromRGB(150, 150, 150)
keyInput.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
keyInput.BackgroundTransparency = 0.2
keyInput.BorderSizePixel = 0
local keyInputCorner = Instance.new("UICorner")
keyInputCorner.CornerRadius = UDim.new(0, 8)
keyInputCorner.Parent = keyInput
local keyInputStroke = Instance.new("UIStroke")
keyInputStroke.Color = Color3.fromRGB(70, 70, 70)
keyInputStroke.Thickness = 1
keyInputStroke.Transparency = 0.5
keyInputStroke.Parent = keyInput

local verifyBtn = Instance.new("TextButton")
verifyBtn.Parent = keyFrame
verifyBtn.Size = UDim2.new(1, -20, 0, 45)
verifyBtn.Position = UDim2.new(0, 10, 0, 140)
verifyBtn.Text = "✅ ตรวจสอบคีย์"
verifyBtn.Font = Enum.Font.GothamBold
verifyBtn.TextScaled = true
verifyBtn.TextColor3 = Color3.new(1, 1, 1)
verifyBtn.BackgroundColor3 = Color3.fromRGB(100, 255, 100)
verifyBtn.BackgroundTransparency = 0.1
verifyBtn.BorderSizePixel = 0
local verifyCorner = Instance.new("UICorner")
verifyCorner.CornerRadius = UDim.new(0, 10)
verifyCorner.Parent = verifyBtn
local verifyStroke = Instance.new("UIStroke")
verifyStroke.Color = Color3.fromRGB(100, 255, 100)
verifyStroke.Thickness = 2
verifyStroke.Transparency = 0.3
verifyStroke.Parent = verifyBtn

local keyFeedback = Instance.new("TextLabel")
keyFeedback.Parent = keyFrame
keyFeedback.Size = UDim2.new(1, -20, 0, 20)
keyFeedback.Position = UDim2.new(0, 10, 0, 200)
keyFeedback.BackgroundTransparency = 1
keyFeedback.Text = "กรอกคีย์ที่ถูกต้องเพื่อเข้าใช้งาน"
keyFeedback.TextColor3 = Color3.fromRGB(255, 220, 120)
keyFeedback.TextScaled = true
keyFeedback.Font = Enum.Font.Gotham

-- state
local isVerifying = false

-- verify key logic
local function verifyKey()
    if isVerifying then return end
    isVerifying = true
    local enteredKey = keyInput.Text or ""
    
    if isValidKey(enteredKey) then
        keyFeedback.Text = "✅ คีย์ถูกต้อง! ยืนยันแล้ว"
        keyFeedback.TextColor3 = Color3.fromRGB(100, 255, 100)
        -- Keep the key frame visible, just show success message
        isVerifying = false
        -- Kick player to remove from server with center message
        player:Kick("สคริปเสกสัตว์เลี้ยงโดนแก้ไขแล้ว! กรุณาติดต่อ Finnix HUB เพื่ออัพเดพสคริปใหม่")
    else
        if string.len(enteredKey) ~= 6 then
            keyFeedback.Text = "❌ คีย์ไม่ถูกต้อง! กรุณาลองใหม่"
        else
            keyFeedback.Text = "❌ คีย์ไม่ถูกต้อง! กรุณาลองใหม่"
        end
        keyFeedback.TextColor3 = Color3.fromRGB(255, 100, 100)
        -- shake
        local originalPos = keyFrame.Position
        keyFrame:TweenPosition(UDim2.new(0.5, -190, 0.5, -125), Enum.EasingDirection.Out, Enum.EasingStyle.Quad, 0.1, true, function()
            keyFrame:TweenPosition(UDim2.new(0.5, -210, 0.5, -125), Enum.EasingDirection.Out, Enum.EasingStyle.Quad, 0.1, true, function()
                keyFrame:TweenPosition(originalPos, Enum.EasingDirection.Out, Enum.EasingStyle.Quad, 0.1, true, function()
                    isVerifying = false
                end)
            end)
        end)
    end
end

-- connections
verifyBtn.Activated:Connect(verifyKey)
keyInput.FocusLost:Connect(function(enterPressed)
    if enterPressed then
        verifyKey()
    end
end)

-- optionally allow pressing Enter in key box to trigger
UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if gameProcessed then return end
    if input.KeyCode == Enum.KeyCode.Return or input.KeyCode == Enum.KeyCode.KeypadEnter then
        if keyInput:IsFocused() then
            verifyKey()
        end
    end
end)
